<article id="{{ caseFile.casefile_id }}">
  <h1>{{page_title}}</h1>
  <div class="row">
    <div class="col-md-2">
      <div class="thumbnail">
        <img src="{{ caseFile.offender.image }}" alt="Head shot of {{ caseFile.offender.given_name }} {{ caseFile.offender.surname }}">
        <p class="text-center"><strong>{{caseFile.casefile_id}}</strong></p>
      </div>
    </div>
    <div class="col-md-2 pull-right">
      <ul class="list-inline">
        <li><span class="label label-default" title="on IEP">IEP</span></li>
        <li><span class="label label-default" title="on ACCT">ACCT</span></li>
        <li><span class="label label-default" title="NPS/CRC Offedner">NPS</span></li>
        <li><span class="label label-default" title="Vunerable Person">VP</span></li>
        <li><span class="label label-default" title="Arsonist">A</span></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <form class="form-horizontal" action="/casefile/{{caseFile.casefile_id}}/assign" method="post">
      <div class="form-group">
        <label class="col-sm-2 control-label">Key Worker</label>
        <div class="col-sm-8"><input class="form-control"/></div>
      </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Prison Offender Manager</label>
          <div class="col-sm-8"><input class="form-control"/></div>
        </div>
      <div class="form-group">
        <div class="col-sm-10 text-right">
          <button type="submit" class="btn btn-primary">Update Assignments</button>
          <a href="/casefile/{{caseFile.casefile_id}}" class="btn btn-default">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</article>
