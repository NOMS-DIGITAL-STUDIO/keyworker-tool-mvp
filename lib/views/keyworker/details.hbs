<article id="{{ keyworker.staff_id }}">
  <h1>{{page_title}}</h1>
  <div class="row">
    <div class="col-md-10">
      <ul class="list-inline">
        <li><a class="btn btn-default" href="/keyworker/{{ keyworker.staff_id }}/assign">Assign Case</a></li>
      </ul>
    </div>
    <div class="col-md-2">
      <ul class="list-inline">
        <li>Case files: <span class="badge badge-default" title="{{keyworker.caseFiles.length}} case files assigned">{{keyworker.caseFiles.length}}</span></li>
      </ul>
    </div>
  </div>
</article>

{{#unless keyworker.caseFiles.length}}
<div class="alert alert-info"><strong>No case files assigned:</strong> This member of staff currently has no case files assigned to them</div>
{{/unless}}
