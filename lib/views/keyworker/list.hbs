<header>
  <h1>{{ page_title }}</h1>
  <p class="lead">You are currently responsible for {{keyWorkers.length}} members of staff</p>
<header>

{{#if keyWorkers}}
<div class="results results-keyworker">
  {{#each keyWorkers as |keyworker| }}
    <article id="{{ keyworker.staff_id }}" style="border-bottom:1px solid #ddd;margin-bottom:11px;padding-bottom:12px;">
      <div class="row">
        <div class="col-md-10">
          <h4><a href="/keyworker/{{ keyworker.staff_id }}">{{ keyworker.given_name }} {{ keyworker.surname }}</a></h4>
          <ul class="list-inline">
            <li><a class="btn btn-default" href="/keyworker/{{ keyworker.staff_id }}">View case assignments</a></li>
            {{!--<li><a class="btn btn-default" href="/keyworker/{{ keyworker.staff_id }}/assign">Assign Case</a></li>--}}
          </ul>
        </div>
        <div class="col-md-2">
          <ul class="list-inline">
            <li>Case files: <span class="badge badge-default" title="{{keyworker.caseFiles.length}} case files assigned">{{keyworker.caseFiles.length}}</span></li>
          </ul>
        </div>
      </div>

      {{#unless keyworker.caseFiles.length}}
      <div class="alert alert-info"><strong>No case files assigned:</strong> This member of staff currently has no case files assigned to them</div>
      {{/unless}}
    </article>
  {{/each}}
</div>
{{else}}
<div class="alert alert-info"><strong>No key workers found:</strong> there were no staff in the key worker role found to be and supervised by you</div>
{{/if}}
